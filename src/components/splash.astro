---
import HeroImage from "~/components/hero-image.astro";
---

<section class="relative h-full bg-black">
  <div id="splash-bg" class="absolute inset-0 opacity-40">
    <HeroImage />
  </div>
  <div class="relative flex justify-center h-full">
    <h2 class="flex flex-col items-center justify-center gap-4 sm:gap-8 px-4">
      <img 
        src="/images/logock.png" 
        alt="C&K Limpieza y Mantenimiento" 
        class="w-32 sm:w-auto"
      />
      <div class="gradient-text text-center font-extrabold tracking-tighter text-4xl sm:text-5xl md:text-6xl">
        C&K Limpieza y<br class="sm:hidden"/> Mantenimiento
      </div>
      <div class="max-w-xl text-center font-extrabold text-xl sm:text-2xl italic text-gray-50">
        Confianza, tranquilidad y satisfacción
      </div>

      <a href="tel:+34622423007" class="button text-xl sm:text-2xl mt-4">Llámanos</a>
    </h2>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>
